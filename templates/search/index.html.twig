{% extends 'base.html.twig' %}

{% block title %}pagrindinis{% endblock %}

{% block body %}
    <body id="section1" class="bc-index">
    <style>
        .example-wrapper { margin: 1em auto; max-width: 700px; width: 150%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <div class="text-center"><h3 class="search-header">Suraskite specialistą ir užsiregistruokite vizitui:</h3></div>
        {{ form_start(search_form) }}
        {{ form_widget(search_form.name, {'attr':
            {'class': 'search-term', 'placeholder': 'Vardas'}}
        ) }}
        {{ form_widget(search_form.specialties, {'attr':
            {'class': 'search-term', 'placeholder': 'Specialistas'}}
        ) }}
        <br>
        <br>
        {{ form_widget(search_form.search, {'attr':
            {'class': 'search-button', 'label': 'Ieškoti'}}
        ) }}
        {{ form_end(search_form) }}
    </div>

    <script>
        window.onscroll = function() {
            let offset = window.pageYOffset;
            let docHeight = document.documentElement.clientHeight;
            if (offset > docHeight * 0.8) {
                document.getElementById("backToTop").classList.add("show");
            } else {
                document.getElementById("backToTop").classList.remove("show");
            }
        }
    </script>
    </body>
{% endblock %}
{% block footer %}
    <style>

        .footer {position:absolute;bottom:0;width:100%;height:55px}
        .color {color : blue; text-align: center}
    </style>
    <footer>
        <div class=" footer   bg-dark">
            {% if app.user %}
                <div>
                    {% if mostAppointed is defined %}
                        <div>
                            <h1 class="color">
                                Daugiausia aptarnavo:
                                {% if mostAppointed.0.getHowManyAppointed != 0%}
                            {% for specialist in mostAppointed %}
                                {{ specialist.getFirstName() }} - {{ specialist.getHowManyAppointed }}
                            {% endfor %}
                                {% else %}
                                Visi - 0
                                {% endif %}
                            </h1>
                        </div>
                    {% endif %}

                </div>
            {% endif %}
        </div>
    </footer>
{% endblock %}
