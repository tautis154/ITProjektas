{% extends 'base.html.twig' %}

{% block title %}resultatai{% endblock %}

{% block body %}
    <body class="bc-index">
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even){background-color: #f2f2f2;}

        #customers tr:hover {background-color: #ddd;}

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
        .example-wrapper { margin: 1em auto; max-width: 550px; width: 100%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div class="text-center"><h3 class="search-header">Pasirikite tam tikra data</h3></div>
        {{ form_start(form) }}

        {{ form_widget(form.selectedTime, {'attr':
            {'class': 'text-center'}}
        ) }}
        {{ form_widget(form.search, {'attr':
            {'class': 'text-center', 'label': 'Ieškoti'}}
        ) }}

        {{ form_end(form) }}
        <div class="page-back">
        </div>
        <div class="limiter">
            <div class="container-table">
                <div class="wrap-table">

                    <div class="wrap-results-error">
                        <h3 class="search-error-header">Atsiprašome, nepavyko rasti specialistų.</h3>
                    </div>

                    <div class="table">
                        <table id="customers">
                            <thead>
                            <tr>
                                <th>Vardas</th>
                                <th>Laikas</th>
                                <th>Zinute</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>




                      
                    </div>

                </div>
            </div>
        </div>
        <div class="page-forward">
        </div>
    </div>

    </body>
{% endblock %}
{% block footer %}
    <style>

        .footer {position:absolute;bottom:0;width:100%;height:55px}
        .color {color : blue; text-align: center}
    </style>
    <footer>
        <div class=" footer   bg-dark">
            {% if app.user %}
                <div>
                    {% if mostAppointed is defined %}
                        <div>
                            <h1 class="color">
                                Daugiausia aptarnavo:
                                {% if mostAppointed.0.getHowManyAppointed != 0%}
                                    {% for specialist in mostAppointed %}
                                        {{ specialist.getFirstName() }} - {{ specialist.getHowManyAppointed }}
                                    {% endfor %}
                                {% else %}
                                    Visi - 0
                                {% endif %}
                            </h1>
                        </div>
                    {% endif %}

                </div>
            {% endif %}
        </div>
    </footer>
{% endblock %}